<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="590dp"
    tools:context=".ui.main.PlanEvent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#c8c8c8">

        <!-- Add Event textview -->
        <TextView
            android:id="@+id/Days"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:background="#c8c8c8"
            android:layout_marginEnd="500dp"
            android:fontFamily="serif"
            android:lineSpacingExtra="18sp"
            android:text="@string/planevent"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#090909"
            android:padding="15dp"
            android:typeface="serif"
            android:visibility="visible" />

        <!-- close imagebutton -->
        <ImageButton
            android:id="@+id/btnClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_close"
            android:paddingRight="15dp"
            android:background="#c8c8c8"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="90dp"
            android:fontFamily="serif"
            android:lineSpacingExtra="18sp"
            android:text="@string/event"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#090909"
            android:textSize="18dp"
            android:typeface="serif"
            android:visibility="visible" />

        <Spinner
            android:id="@+id/planeventname"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:background="#22000000"
            android:layout_marginStart="94dp"
            android:layout_marginTop="90dp"
            android:prompt="@string/eventname" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="140dp"
            android:fontFamily="serif"
            android:lineSpacingExtra="18sp"
            android:text="@string/event_date"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#090909"
            android:textSize="18dp"
            android:typeface="serif"
            android:visibility="visible" />

        <EditText
            android:id="@+id/editTextDate"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="140dp"
            android:background="#22000000"
            android:hint="@string/dd_mm_yyyy"
            android:ems="5"
            android:enabled="true"
            android:inputType="date" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="190dp"
            android:fontFamily="serif"
            android:lineSpacingExtra="18sp"
            android:text="@string/time"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#090909"
            android:textSize="18dp"
            android:typeface="serif"
            android:visibility="visible" />

        <EditText
            android:id="@+id/editTextTime"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginStart="105dp"
            android:layout_marginTop="190dp"
            android:background="#22000000"
            android:ems="5"
            android:hint="@string/hh_mm"
            android:inputType="time"
            android:textAlignment="center" />

        <Spinner
            android:id="@+id/period"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="190dp"
            android:prompt="@string/timePeriod" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="275dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="240dp"
            android:fontFamily="serif"
            android:lineSpacingExtra="18sp"
            android:text="@string/address"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#090909"
            android:textSize="18dp"
            android:typeface="serif"
            android:visibility="visible" />

        <EditText
            android:id="@+id/edtAddress"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginStart="45dp"
            android:layout_marginEnd="19dp"
            android:layout_marginTop="240dp"
            android:background="#22000000"
            android:ems="10"
            android:inputType="textPersonName"
            android:prompt="@string/address" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="290dp"
            android:fontFamily="serif"
            android:lineSpacingExtra="18sp"
            android:text="@string/zip"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#090909"
            android:textSize="18dp"
            android:typeface="serif"
            android:visibility="visible" />

        <EditText
            android:id="@+id/editTextPostalAddress"
            android:layout_width="138dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:layout_marginTop="290dp"
            android:background="#22000000"
            android:ems="10"
            android:inputType="textPostalAddress" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="390dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="340dp"
            android:fontFamily="serif"
            android:lineSpacingExtra="18sp"
            android:text="@string/citystate"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#090909"
            android:textSize="18dp"
            android:typeface="serif"
            android:visibility="visible" />

        <AutoCompleteTextView
            android:id="@+id/edtCityAndState"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="340dp"
            android:background="#22000000"
            android:ems="10"
            android:inputType="textPersonName"
            android:prompt="@string/citystate" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="385dp"
            android:fontFamily="serif"
            android:lineSpacingExtra="18sp"
            android:text="Notes"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#090909"
            android:textSize="18dp"
            android:typeface="serif"
            android:visibility="visible" />

        <EditText
            android:id="@+id/edtnotes"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginStart="45dp"
            android:layout_marginEnd="19dp"
            android:layout_marginTop="395dp"
            android:background="#22000000"
            android:ems="10"
            android:inputType="textPersonName"
            android:prompt="@string/notes" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="710dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnAddEvent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="165dp"
            android:layout_marginStart="150dp"
            android:text="@string/addevent" />
    </LinearLayout>

</FrameLayout>