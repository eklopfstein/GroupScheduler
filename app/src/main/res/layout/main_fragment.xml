<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MainFragment">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:textSize="24sp"
        android:typeface="serif"
        android:visibility="visible"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!-- Schedule textview -->
            <TextView
                android:id="@+id/Days"
                android:layout_width="412dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="#c8c8c8"
                android:layout_marginEnd="500dp"
                android:fontFamily="serif"
                android:lineSpacingExtra="18sp"
                android:text="@string/mySchedule"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#090909"
                android:padding="15dp"
                android:typeface="serif"
                android:visibility="visible" />
        </LinearLayout>

        <!-- calendar -->


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="135dp">
            <!-- Planned Events textview -->
            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/todo"
                android:fontFamily="serif"
                android:lineSpacingExtra="18sp"
                android:text="@string/schedule"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#090909"
                android:textSize="20sp"
                android:typeface="serif"
                android:visibility="visible" />

            <ImageButton
                android:id="@+id/scheduleEventButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:padding="7dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/todo"
                android:background="#c8c8c8"
                android:layout_marginStart="10dp"
                app:srcCompat="@drawable/ic_button3" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView13"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="540dp"
            android:layout_marginEnd="300dp"
            android:fontFamily="serif"
            android:lineSpacingExtra="18sp"
            android:text="@string/name"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#090909"
            android:textSize="15sp"
            android:typeface="serif"
            android:visibility="visible" />

        <!-- times textview -->
        <TextView
            android:id="@+id/textView14"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:lineSpacingExtra="18sp"
            android:text="@string/timeNeeded"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#090909"
            android:textSize="15sp"
            android:typeface="serif"
            android:visibility="visible"
            android:layout_marginTop="540dp"
            android:layout_marginStart="170dp"
            android:layout_marginEnd="250dp"
            android:layout_width="100dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="300dp"
            android:layout_marginLeft="105dp">
            <!-- Planned Events textview -->
            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/todo"
                android:fontFamily="serif"
                android:lineSpacingExtra="18sp"
                android:text="@string/plannedEvents"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#090909"
                android:textSize="20sp"
                android:typeface="serif"
                android:visibility="visible" />

            <ImageButton
                android:id="@+id/planEventButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:padding="7dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/todo"
                android:background="#c8c8c8"
                android:layout_marginStart="10dp"
