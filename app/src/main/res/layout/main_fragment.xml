<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MainFragment">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:textSize="24sp"
        android:typeface="serif"
        android:visibility="visible"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!-- Schedule textview -->
            <TextView
                android:id="@+id/textView1"
                android:layout_width="412dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:background="#c8c8c8"
                android:layout_marginEnd="500dp"
                android:fontFamily="serif"
                android:lineSpacingExtra="18sp"
                android:text="@string/schedule"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#090909"
                android:padding="15dp"
                android:typeface="serif"
                android:visibility="visible" />
        </LinearLayout>

        <!-- calendar -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <CalendarView
                android:id="@+id/calendarView"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- days textview -->
        <TextView
            android:id="@+id/textView3"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="432dp"
            android:layout_marginEnd="300dp"
            android:fontFamily="serif"
            android:lineSpacingExtra="18sp"
            android:text="@string/days"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#090909"
            android:textSize="15sp"
            android:typeface="serif"
            android:visibility="visible" />

        <!-- times textview -->
        <TextView
            android:id="@+id/textView4"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:lineSpacingExtra="18sp"
            android:text="@string/times"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#090909"
            android:textSize="15sp"
            android:typeface="serif"
            android:visibility="visible"
            android:layout_marginTop="432dp"
            android:layout_marginStart="90dp"
            android:layout_marginEnd="250dp"
            android:layout_width="80dp" />

        <!-- days textview -->
        <TextView
            android:id="@+id/textView5"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:lineSpacingExtra="18sp"
            android:text="@string/days2"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#090909"
            android:textSize="15sp"
            android:typeface="serif"
            android:visibility="visible"
            android:layout_marginTop="432dp"
            android:layout_marginStart="215dp"
            android:layout_marginEnd="125dp"
            android:layout_width="80dp" />

        <!-- times textview -->
        <TextView
            android:id="@+id/textView6"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:lineSpacingExtra="18sp"
            android:text="@string/times2"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#090909"
            android:textSize="15sp"
            android:typeface="serif"
            android:visibility="visible"
            android:layout_marginTop="432dp"
            android:layout_marginStart="295dp"
            android:layout_marginEnd="45dp"
            android:layout_width="80dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:background="#c8c8c8"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/friendsPageButton"
                    android:layout_width="78dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="centerInside"
                    android:adjustViewBounds="true"
                    android:padding="10dp"
                    android:contentDescription="@string/todo"
                    android:background="#c8c8c8"
                    android:src="@drawable/ic_button1"/>

                <ImageButton
                    android:id="@+id/groupsPageButton"
                    android:layout_width="78dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="centerInside"
                    android:adjustViewBounds="true"
                    android:padding="10dp"
                    android:contentDescription="@string/todo"
                    android:background="#c8c8c8"
                    app:srcCompat="@drawable/ic_button2" />

                <!-- addEvent imagebutton -->
                <ImageButton
                    android:id="@+id/addEventPageButton"
                    android:layout_width="93dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="centerInside"
                    android:padding="7dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/todo"
                    android:background="#c8c8c8"
                    app:srcCompat="@drawable/ic_button3" />

                <ImageButton
                    android:id="@+id/schedulePageButton"
                    android:layout_width="78dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:scaleType="centerInside"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/todo"
                    android:background="#c8c8c8"
                    android:src="@drawable/ic_button4"/>

                <ImageButton
                    android:id="@+id/accountPageButton"
                    android:layout_width="78dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="centerInside"
                    android:adjustViewBounds="true"
                    android:padding="10dp"
                    android:background="#c8c8c8"
                    android:contentDescription="@string/todo"
                    android:src="@drawable/ic_button5"/>
            </LinearLayout>
        </RelativeLayout>

        <!-- Events textview -->
        <TextView
            android:id="@+id/textView2"
            android:layout_width="412dp"
            android:layout_height="35dp"
            android:layout_marginTop="398dp"
            android:layout_marginEnd="500dp"
            android:contentDescription="@string/todo"
            android:fontFamily="serif"
            android:lineSpacingExtra="18sp"
            android:text="@string/events"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#090909"
            android:textSize="20sp"
            android:typeface="serif"
            android:visibility="visible" />

        <!-- recyclerview to display events -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_marginTop="455dp"
            android:layout_marginHorizontal="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>